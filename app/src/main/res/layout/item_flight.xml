<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginTop="@dimen/_15dp"
        app:cardCornerRadius="@dimen/_10dp"
        app:cardElevation="@dimen/_20dp"
        app:cardBackgroundColor="@color/colorCard"
        android:layout_height="@dimen/_190dp">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/cardSideLayout"
                android:background="@color/colorCardSide1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/oval1"
                    android:src="@drawable/ic_oval_copy_2"
                    android:layout_above="@+id/oval2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_30dp"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"/>

            <ImageView
                    android:id="@+id/oval2"
                    android:src="@drawable/ic_oval_copy_2"
                    android:layout_above="@+id/oval3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"/>

            <ImageView
                    android:id="@+id/oval3"
                    android:src="@drawable/ic_oval_copy_2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-5dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_80dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_40dp"
                    android:layout_centerHorizontal="true"
                    >

                <com.dawly.app.views.DawlyTextViewBold
                        android:id="@+id/unable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="@string/unable_to_carry"
                        />

                <com.dawly.app.views.DawlyTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorWhite"
                        android:text="@string/guns"
                        />

                <com.dawly.app.views.DawlyTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorWhite"
                        android:text="@string/drugs"
                        />

                <com.dawly.app.views.DawlyTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorWhite"
                        android:text="@string/people"
                        />

                <com.dawly.app.views.DawlyTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorWhite"
                        android:text="@string/animals"
                        />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/cardBackImg"
                    android:src="@drawable/ic_shape_copy"
                    android:layout_width="@dimen/_180dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-15dp"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/flightStart"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_alignTop="@+id/flightStart"
                    android:orientation="vertical">

                <ImageView
                        android:src="@drawable/smal_circle_bg"
                        android:layout_width="@dimen/_10dp"
                        android:layout_height="@dimen/_10dp"/>

                <ImageView
                        android:src="@drawable/smal_circle_filled_bg"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3dp"
                        android:layout_width="@dimen/_5dp"
                        android:layout_height="@dimen/_5dp"/>

                <ImageView
                        android:src="@drawable/smal_circle_filled_bg"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3dp"
                        android:layout_width="@dimen/_5dp"
                        android:layout_height="@dimen/_5dp"/>

                <ImageView
                        android:src="@drawable/smal_circle_filled_bg"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3dp"
                        android:layout_width="@dimen/_5dp"
                        android:layout_height="@dimen/_5dp"/>

                <ImageView
                        android:src="@drawable/smal_circle_filled_bg"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3dp"
                        android:layout_width="@dimen/_5dp"
                        android:layout_height="@dimen/_5dp"/>

                <ImageView
                        android:src="@drawable/smal_circle_bg"
                        android:layout_width="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_height="@dimen/_10dp"/>


            </LinearLayout>

            <com.dawly.app.views.DawlyTextView
                    android:id="@+id/flightStart"
                    android:layout_centerHorizontal="true"
                    android:text="New York,USA"

                    android:maxLines="1"
                    android:textSize="17sp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textColor="@color/colorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ProgressBar
                    android:id="@+id/flightProgress"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_below="@+id/flightStart"
                    android:layout_width="match_parent"
                    android:indeterminateTint="@color/colorEmail"
                    android:layout_alignStart="@+id/flightStart"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:progress="70"
                    android:layout_height="wrap_content"/>

            <com.dawly.app.views.DawlyTextView
                    android:id="@+id/flightDestination"
                    android:layout_below="@+id/flightProgress"
                    android:layout_alignStart="@+id/flightProgress"
                    android:text="Cairo,Egypt"
                    android:textSize="17sp"
                    android:paddingEnd="@dimen/_3dp"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_5dp"
                    android:textColor="@color/colorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/flightDate"
                    android:layout_below="@+id/flightDestination"
                    android:layout_centerHorizontal="true"
                    android:text="Date:12 Sep 2018"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textColor="@color/colorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/availableWeight"
                    android:layout_below="@+id/flightDate"
                    android:layout_centerHorizontal="true"
                    android:text="Available Weight:20lbs"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColor="@color/colorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>