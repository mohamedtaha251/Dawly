<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6fdff"
>

    <TextView
            android:id="@+id/tv_bank_amiunt_currency_withdraw"
            android:layout_width="match_parent"
            android:text="@string/amount_and_currency"
            android:gravity="center"
            android:paddingTop="@dimen/_15dp"
            android:paddingBottom="@dimen/_20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginEnd="@dimen/_60dp"
            android:background="@drawable/withdraw_header_text_view"
            android:textColor="@color/colorHeader"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
            android:id="@+id/card_bank_amount_and_currency_wirhdraw"
            android:layout_width="match_parent"
            app:cardElevation="@dimen/_10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#bff6ff"
            app:cardCornerRadius="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@id/tv_bank_amiunt_currency_withdraw"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                android:background="@drawable/flag_transparent"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            <ImageView
                    android:id="@+id/iv_paypal_icon_amount_currency_withdraw"
                    android:src="@drawable/ic_iconfinder__paypal_39_1156727"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/paypal_amount_currency_email_Input"
                    android:layout_marginTop="@dimen/_20dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_paypal_icon_amount_currency_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.dawly.app.views.DawlyEditText
                        android:id="@+id/paypal_amount_currency_email"
                        android:maxLines="1"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@_.-"
                        android:maxLength="30"
                        android:textSize="13sp"
                        android:inputType="textCapCharacters"
                        android:hint="@string/email"
                        android:textColor="@color/dark_slate_blue"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:textColorHint="@color/dark_slate_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>