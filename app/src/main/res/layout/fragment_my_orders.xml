<?xml version="1.0" encoding="utf-8"?>
<layout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
            android:id="@+id/infoLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp">

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/totalOrdersCount"
                    android:textColor="@color/colorOrders"
                    android:text="20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.dawly.app.views.DawlyTextViewBold
                    android:textColor="@color/colorOrders"
                    android:text="@string/total_orders"
                    android:layout_alignParentBottom="true"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@color/colorOrders"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_height="match_parent"/>


        </RelativeLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/activeOrdersCount"
                    android:textColor="@color/colorOrders"
                    android:text="20"
                    android:textSize="25sp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.dawly.app.views.DawlyTextViewBold
                    android:textColor="@color/colorOrders"
                    android:text="@string/active_orders"
                    android:layout_alignParentBottom="true"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="1dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorOrders"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_height="match_parent"/>


        </RelativeLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/pendingOrdersCount"
                    android:textColor="@color/colorOrders"
                    android:text="20"
                    android:textSize="25sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.dawly.app.views.DawlyTextViewBold
                    android:textColor="@color/colorOrders"
                    android:text="@string/pending_orders"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>


    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/flightsSwipeRefresh"

            android:layout_below="@+id/infoLayout"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/myOrdersRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>

</layout>