<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profileImg"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:src="@drawable/kamal"
            android:layout_centerVertical="true"
            app:riv_oval="true"
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_70dp"/>


    <com.dawly.app.views.DawlyTextViewBold
            android:id="@+id/userName"
            android:text="Muhammad"
            android:layout_toEndOf="@+id/profileImg"
            android:layout_marginStart="@dimen/_20dp"
            android:textColor="@color/colorUserName"
            android:layout_alignTop="@+id/profileImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.dawly.app.views.DawlyTextViewBold
            android:id="@+id/status"
            android:text="Online"
            android:layout_below="@+id/userName"
            android:layout_toEndOf="@+id/profileImg"
            android:layout_marginStart="@dimen/_20dp"
            android:textColor="@color/colorUserStatus"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.dawly.app.views.DawlyTextViewBold
            android:id="@+id/message"
            android:text="just u checking up on"
            android:layout_below="@+id/status"
            android:layout_toEndOf="@+id/profileImg"
            android:layout_marginStart="@dimen/_20dp"
            android:textSize="12sp"
            android:textColor="@color/colorEmail"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:background="@drawable/circle_green_bg"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp">

        <com.dawly.app.views.DawlyTextViewBold
                android:layout_centerInParent="true"
                android:text="1"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_below="@+id/profileImg"
            android:background="@color/colorMessagesSeparator"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_height="1dp"/>


</RelativeLayout>