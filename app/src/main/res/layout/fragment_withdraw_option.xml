<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myaccount_background"
>



    <android.support.constraint.ConstraintLayout
            android:background="@color/ice_blue_two"
            android:id="@+id/cl_withdraw_options_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- Withdraw To Bank Account-->
        <android.support.v7.widget.CardView
                android:id="@+id/card_witdraw_bank_option"
                app:cardCornerRadius="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        >
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_withdraw_bank_account_option"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bright_aqua_two"


            >

                <ImageView
                        android:id="@+id/iv_withdraw_bank_option_icon"
                        android:src="@drawable/ic_iconfinder_bank_1312825"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                />

                <View
                        android:id="@+id/view_seperetor_withdraw_bank_option"
                        android:layout_width="1.5dp"
                        android:layout_height="0dp"
                        android:background="@color/dark_blue_grey"
                        android:layout_marginStart="@dimen/_30dp"
                        app:layout_constraintTop_toTopOf="@id/tv_withdraw_bank_option"
                        app:layout_constraintBottom_toBottomOf="@id/tv_withdraw_bank_option"
                        app:layout_constraintStart_toEndOf="@id/iv_withdraw_bank_option_icon"
                />

                <TextView
                        android:id="@+id/tv_withdraw_bank_option"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/dark_blue_grey"
                        android:letterSpacing="0.03"
                        android:text="Withdraw To Bank Account"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_20dp"
                        app:layout_constraintStart_toEndOf="@id/view_seperetor_withdraw_bank_option"
                        app:layout_constraintTop_toTopOf="@id/iv_withdraw_bank_option_icon"
                        app:layout_constraintBottom_toBottomOf="@id/iv_withdraw_bank_option_icon"
                        android:layout_height="wrap_content"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <!-- Withdraw To payPal Account-->
        <android.support.v7.widget.CardView
                android:id="@+id/card_witdraw_paypal_option"
                app:cardCornerRadius="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toBottomOf="@id/card_witdraw_bank_option"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        >
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_withdraw_paypal_account_option"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/pale_sky_blue"


            >

                <ImageView
                        android:id="@+id/iv_withdraw_paypal_option_icon"
                        android:src="@drawable/ic_iconfinder__paypal_39_1156727"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                />

                <View
                        android:id="@+id/view_seperetor_withdraw_paypal_option"
                        android:layout_width="1.5dp"
                        android:layout_height="0dp"
                        android:background="@color/dark_blue_grey"
                        android:layout_marginStart="@dimen/_10dp"
                        app:layout_constraintTop_toTopOf="@id/tv_withdraw_paypal_option"
                        app:layout_constraintBottom_toBottomOf="@id/tv_withdraw_paypal_option"
                        app:layout_constraintStart_toEndOf="@id/iv_withdraw_paypal_option_icon"
                />

                <TextView
                        android:id="@+id/tv_withdraw_paypal_option"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/dark_blue_grey"
                        android:letterSpacing="0.03"
                        android:text="@string/withdraw_to_paypal_account"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_20dp"
                        app:layout_constraintStart_toEndOf="@id/view_seperetor_withdraw_paypal_option"
                        app:layout_constraintTop_toTopOf="@id/iv_withdraw_paypal_option_icon"
                        app:layout_constraintBottom_toBottomOf="@id/iv_withdraw_paypal_option_icon"
                        android:layout_height="wrap_content"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>