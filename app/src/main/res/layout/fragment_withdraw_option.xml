<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/myaccount_background"
>

    <TextView
            android:id="@+id/tv_value_of_total_balance_balance_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_marginTop="@dimen/_65dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="1.5sp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="$ 1, 893.45"
    />

    <TextView
            android:id="@+id/tv_total_balance_balance_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="@color/colorWhite"
            android:lineSpacingExtra="1.5sp"
            android:gravity="center_horizontal"
            android:text="@string/total_balance"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_value_of_total_balance_balance_info"

    />

    <android.support.constraint.ConstraintLayout
            android:layout_marginTop="200dp"
            android:background="@color/ice_blue_two"
            android:id="@+id/cl_withdraw_options_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- Withdraw To Bank Account-->
        <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_withdraw_bank_account_option"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/bright_aqua_two"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginEnd="@dimen/_30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        >

            <ImageView
                    android:id="@+id/iv_withdraw_bank_option_icon"
                    android:src="@drawable/com_facebook_button_icon_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />

            <View
                    android:id="@+id/view_seperetor_withdraw_bank_option"
                    android:layout_width="1.5dp"
                    android:layout_height="0dp"
                    android:background="@color/dark_blue_grey"
                    android:layout_marginStart="@dimen/_30dp"
                    app:layout_constraintTop_toTopOf="@id/iv_withdraw_bank_option_icon"
                    app:layout_constraintBottom_toBottomOf="@id/iv_withdraw_bank_option_icon"
                    app:layout_constraintStart_toEndOf="@id/iv_withdraw_bank_option_icon"
            />

            <TextView
                    android:id="@+id/tv_withdraw_bank_option"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/dark_blue_grey"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="-0.5sp"
                    android:text="Withdraw To Bank Account"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_30dp"
                    app:layout_constraintStart_toEndOf="@id/view_seperetor_withdraw_bank_option"
                    app:layout_constraintTop_toTopOf="@id/iv_withdraw_bank_option_icon"
                    app:layout_constraintBottom_toBottomOf="@id/iv_withdraw_bank_option_icon"
                    android:layout_height="wrap_content"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>