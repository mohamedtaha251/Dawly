<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/colorBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.dawly.app.views.DawlyButtonBold
                android:id="@+id/changeLang"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:text="@string/eng"
                android:textColor="@color/colorEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:src="@drawable/ic_logo"
                android:layout_above="@+id/facebookCard"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="170dp"
                android:layout_height="170dp"/>

        <ImageView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_background"/>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/facebookCard"
                android:layout_centerInParent="true"
                android:layout_height="50dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/facebook_bg"
                    android:layout_height="wrap_content">

                <com.dawly.app.views.DawlyButtonMontserratBold
                        android:text="@string/continue_with_facebook"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/facebookImg"
                        android:src="@drawable/ic_icon_facebook"
                        android:layout_marginStart="30dp"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_height="20dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:id="@+id/googleCard"
                android:layout_below="@+id/facebookCard"
                android:layout_height="50dp"
        >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/google_plus_bg"
                    android:layout_height="wrap_content">

                <com.dawly.app.views.DawlyButtonMontserratBold
                        android:text="@string/sign_in_with_google"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/googleImg"
                        android:src="@drawable/ic_google_plus_symbol"
                        android:layout_marginStart="30dp"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_height="20dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <com.dawly.app.views.DawlyButtonMontserratBold
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/googleCard"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:background="@drawable/email_bg"
                android:text="@string/continue_with_email"
        />

    </RelativeLayout>
</layout>








