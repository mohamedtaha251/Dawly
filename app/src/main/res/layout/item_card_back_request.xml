<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorCard"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/_20dp"
        app:cardBackgroundColor="@color/colorCard"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_height="@dimen/_150dp">


    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/boxImg"
                android:src="@drawable/ic_box"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true"
                android:layout_height="80dp"/>

        <LinearLayout
                android:layout_weight="1.4"
                android:id="@+id/infoLayout"
                android:layout_toEndOf="@+id/boxImg"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_50dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/itemName"
                    android:textSize="22sp"
                    android:text="Order #1"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:maxLines="2"
                    android:textColor="@color/colorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/itemDescription"
                    android:textSize="13sp"
                    android:text="@string/current_status"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:maxLines="4"
                    android:textColor="#d8d8d8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.dawly.app.views.DawlyTextViewBold
                    android:textSize="22sp"
                    android:text="Placed"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:maxLines="2"
                    android:textColor="@color/colorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
