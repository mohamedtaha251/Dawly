<?xml version="1.0" encoding="utf-8"?>
<layout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.TabLayout
            android:id="@+id/ordersTabLayout"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorWhite"
            android:background="@drawable/tab_gradient_bg"
            app:tabIndicatorColor="@color/colorTabSelectedIndicator"
            app:tabIndicatorHeight="@dimen/_5dp"
            app:tabGravity="fill"
            app:tabTextAppearance="@style/MyCustomTextAppearance"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:tabIndicatorAnimationDuration="500"
            android:elevation="6dp"
            app:tabIndicatorGravity="bottom"
            app:tabTextColor="@color/colorTabTextUnSelectedIndicator"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--<android.support.design.widget.TabItem-->
        <!--android:text="@string/orders"-->

        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"/>-->

        <!--<android.support.design.widget.TabItem-->
        <!--android:text="@string/my_orders"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"/>-->
    </android.support.design.widget.TabLayout>



    <FrameLayout
            android:id="@+id/ordersContainer"
            android:layout_below="@+id/ordersTabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</RelativeLayout>

</layout>