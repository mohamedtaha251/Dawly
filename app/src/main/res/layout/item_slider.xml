<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/constraint_layout_slider_item"
        android:background="@color/dark_slate_blue"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/tutorial_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:src="@mipmap/tutorial_1"
           />

    <TextView
            android:id="@+id/tv_tutorial_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_40dp"
            android:layout_marginEnd="@dimen/_40dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/tutorial_image"
            android:textColor="@android:color/white"
            tools:text="What is Dawly?"
            android:layout_marginTop="@dimen/_40dp"
            android:textSize="30sp"/>

    <TextView
            android:id="@+id/tv_tutorial_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tutorial_header"
            android:layout_marginStart="@dimen/_40dp"
            android:layout_marginEnd="@dimen/_40dp"
            android:layout_marginTop="@dimen/_60dp"
            android:textSize="12sp"
            android:gravity="center_horizontal"
       />

    <Button
            android:id="@+id/btn_skip_tutorial"
            android:text="@string/skip"
            android:background="@drawable/flag_transparent"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btn_next_tutorial"
            android:text="@string/next"
            android:background="@drawable/flag_transparent"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>