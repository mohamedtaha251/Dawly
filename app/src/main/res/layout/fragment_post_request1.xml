<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <RelativeLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:attrs="http://schemas.android.com/tools"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                    android:id="@+id/step2Card"
                    app:cardCornerRadius="@dimen/_15dp"
                    android:layout_marginStart="@dimen/_40dp"
                    android:layout_marginEnd="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_30dp"
                    android:layout_above="@+id/pageIndicatorView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPost"
                    app:cardBackgroundColor="@color/colorLogin">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <com.dawly.app.views.DawlyTextViewBold
                            android:id="@+id/step2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_15dp"
                            android:textSize="26sp"
                            android:textColor="@color/colorHeader"
                            android:text="@string/step_1"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    app:cardCornerRadius="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_70dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:layout_above="@+id/pageIndicatorView"
                    app:cardElevation="@dimen/_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPost"
                    app:cardBackgroundColor="@color/colorPost">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <RelativeLayout
                            android:layout_width="120dp"
                            android:layout_alignParentTop="true"
                            android:id="@+id/itemImg"
                            android:layout_alignParentEnd="true"
                            android:layout_height="120dp">


                        <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@color/colorPick"
                                app:riv_oval="false"
                                app:riv_corner_radius="@dimen/_20dp"
                                app:riv_corner_radius_top_right="@dimen/_10dp"
                                app:riv_corner_radius_bottom_left="@dimen/_10dp"
                                />

                        <ImageView
                                android:layout_centerInParent="true"
                                android:layout_width="@dimen/_20dp"
                                android:layout_height="@dimen/_20dp"
                                android:src="@drawable/ic_image_pick"/>
                    </RelativeLayout>

                    <com.dawly.app.views.DawlyEditText
                            android:id="@+id/country"
                            android:layout_width="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/itemImg"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:paddingBottom="@dimen/_20dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/country"
                            android:textColorHint="@color/colorInactive"
                            android:textSize="@dimen/_16sp"
                            android:layout_marginTop="@dimen/_20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/header"
                            android:textColor="@color/colorHeader"/>

                    <com.dawly.app.views.DawlyEditText
                            android:id="@+id/weight"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/itemImg"
                            android:layout_below="@+id/country"
                            android:paddingBottom="@dimen/_20dp"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:hint="@string/weight"
                            android:textColorHint="@color/colorInactive"
                            android:textSize="@dimen/_16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <com.dawly.app.views.DawlyEditText
                            android:id="@+id/date"
                            android:layout_below="@+id/weight"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:hint="@string/date"
                            android:textColorHint="@color/colorInactive"
                            android:textSize="@dimen/_16sp"
                            android:paddingBottom="@dimen/_20dp"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/itemImg"
                            android:drawableEnd="@drawable/ic_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <com.dawly.app.views.DawlyEditText
                            android:id="@+id/itemName"
                            android:layout_below="@+id/date"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:hint="@string/item_name"
                            android:textColorHint="@color/colorInactive"
                            android:textSize="@dimen/_16sp"
                            android:paddingBottom="@dimen/_20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <com.dawly.app.views.DawlyEditText
                            android:id="@+id/itemLink"
                            android:textSize="@dimen/_16sp"
                            android:layout_below="@+id/itemName"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:hint="@string/item_link"
                            android:textColorHint="@color/colorInactive"
                            android:paddingBottom="@dimen/_20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                </RelativeLayout>

                <!--</ScrollView>-->
            </android.support.v7.widget.CardView>
            <com.rd.PageIndicatorView
                    android:id="@+id/pageIndicatorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_10dp"
                    app:piv_animationType="worm"
                    app:piv_dynamicCount="true"
                    app:piv_select="1"
                    android:layout_above="@+id/continueBtn"
                    app:piv_interactiveAnimation="true"
                    app:piv_selectedColor="#35a6b7"
                    app:piv_unselectedColor="#bfcefa"
                    attrs:piv_padding="10dp"
                    attrs:piv_radius="5dp"/>

            <com.dawly.app.views.DawlyButtonMontserratBold
                    android:id="@+id/continueBtn"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:text="@string/continue_"
                    android:textAllCaps="false"
                    android:textColor="@color/color_continue_inactive"
                    android:background="@drawable/continue_inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>
    </ScrollView>

</layout>