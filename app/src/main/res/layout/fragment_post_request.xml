<?xml version="1.0" encoding="utf-8"?>
<layout>


    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:attrs="http://schemas.android.com/tools"
            android:background="@color/colorEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
                android:id="@+id/step2Card"
                app:cardCornerRadius="@dimen/_10dp"
                android:layout_marginStart="@dimen/_40dp"
                android:layout_marginEnd="@dimen/_40dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_30dp"
                android:layout_above="@+id/pageIndicatorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPost"
                app:cardBackgroundColor="@color/colorLogin">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.dawly.app.views.DawlyTextViewBold
                        android:id="@+id/step2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_15dp"
                        android:textSize="26sp"
                        android:textColor="@color/colorHeader"
                        android:text="@string/step_2"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/_10dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginTop="@dimen/_70dp"
                android:layout_marginBottom="@dimen/_30dp"
                android:layout_above="@+id/pageIndicatorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPost"
                app:cardBackgroundColor="@color/colorPost">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.dawly.app.views.DawlyTextViewBold
                        android:id="@+id/header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_20dp"
                        android:textSize="30sp"
                        android:textColor="@color/colorHeader"
                        android:text="@string/step_1"/>
                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_20dp"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/header"
                        android:textColor="@color/colorHeader"
                        android:text="@string/enter_item_link"/>

                <com.dawly.app.views.DawlyEditText
                        android:id="@+id/itemLink"
                        android:layout_below="@+id/desc"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                <com.dawly.app.views.DawlyButtonBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next"
                        android:id="@+id/nextBtn"
                        android:textColor="@color/colorHeader"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_20dp"
                />
            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <com.rd.PageIndicatorView
                android:id="@+id/pageIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_30dp"
                app:piv_animationType="worm"
                app:piv_dynamicCount="true"
                app:piv_select="0"
                android:layout_alignParentBottom="true"
                app:piv_interactiveAnimation="true"
                app:piv_selectedColor="#35a6b7"
                app:piv_unselectedColor="#bfcefa"
                attrs:piv_padding="10dp"
                attrs:piv_radius="5dp"/>
        <!--app:piv_viewPager="@id/viewPager"-->


    </RelativeLayout>
</layout>