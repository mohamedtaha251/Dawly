<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:attrs="http://schemas.android.com/tools"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/_15dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_marginBottom="@dimen/_30dp"
            android:layout_above="@+id/pageIndicatorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPost"
            app:cardElevation="@dimen/_20dp"
            app:cardBackgroundColor="@color/colorPost">


        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_40dp"
                    android:textAllCaps="true"
                    android:textSize="30sp"
                    android:textColor="@color/colorEmail"
                    android:text="@string/preview"
                    />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/infoLayout"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_toEndOf="@+id/titleLayout"
                    android:layout_toStartOf="@+id/paymentTypeImg"
                    android:layout_below="@+id/header"
                    android:orientation="vertical">

                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/paymentInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHeader"
                        android:text="xxx xxx xxx xx48"
                        />

                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/locationInfo"
                        android:paddingTop="@dimen/_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHeader"
                        android:text="Egypt"
                        />

                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/weightInfo"
                        android:paddingTop="@dimen/_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHeader"
                        android:text="65 KG"
                        />

                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/dateInfo"
                        android:paddingTop="@dimen/_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHeader"
                        android:text="3/10/1988"
                        />

                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/itemNameInfo"
                        android:paddingTop="@dimen/_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHeader"
                        android:text="Macbook Pro"
                        />

                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/itemLinkInfo"
                        android:paddingTop="@dimen/_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorHeader"
                        android:text="https://ebay.com"
                        />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/titleLayout"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_below="@+id/header"
                    android:orientation="vertical">

                <com.dawly.app.views.DawlyTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/paymentTitle"
                        android:textColor="@color/colorHeader"
                        android:hint="@string/payment"
                        android:layout_height="wrap_content"/>

                <com.dawly.app.views.DawlyTextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentStart="true"
                        android:paddingTop="@dimen/_10dp"
                        android:id="@+id/locationTitle"
                        android:textColor="@color/colorHeader"
                        android:hint="@string/location"
                        android:layout_height="wrap_content"/>

                <com.dawly.app.views.DawlyTextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentStart="true"
                        android:paddingTop="@dimen/_10dp"
                        android:id="@+id/weightTitle"
                        android:textColor="@color/colorHeader"
                        android:hint="@string/weight_"
                        android:layout_height="wrap_content"/>

                <com.dawly.app.views.DawlyTextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentStart="true"
                        android:id="@+id/dateTitle"
                        android:paddingTop="@dimen/_10dp"
                        android:textColor="@color/colorHeader"
                        android:hint="@string/date_"
                        android:layout_height="wrap_content"/>

                <com.dawly.app.views.DawlyTextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentStart="true"
                        android:id="@+id/itemNameTitle"
                        android:textColor="@color/colorHeader"
                        android:hint="@string/item_name_"
                        android:paddingTop="@dimen/_10dp"
                        android:layout_height="wrap_content"/>

                <com.dawly.app.views.DawlyTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/itemLinkTitle"
                        android:textColor="@color/colorHeader"
                        android:hint="@string/item_link_"
                        android:paddingTop="@dimen/_10dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                    android:id="@+id/paymentTypeImg"
                    android:src="@drawable/ic_mastercard"
                    android:layout_below="@+id/header"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_80dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/_10dp"
            app:piv_animationType="worm"
            app:piv_dynamicCount="true"
            app:piv_select="3"
            android:visibility="visible"
            android:layout_above="@+id/doneBtn"
            app:piv_interactiveAnimation="true"
            app:piv_selectedColor="#35a6b7"
            app:piv_unselectedColor="#bfcefa"
            attrs:piv_padding="10dp"
            attrs:piv_radius="5dp"/>

    <com.dawly.app.views.DawlyButtonBold
            android:id="@+id/doneBtn"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:text="@string/done"
            android:textAllCaps="false"
            android:visibility="visible"
            android:textColor="@color/colorWhite"
            android:background="@drawable/continue_gradient_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>
</layout>