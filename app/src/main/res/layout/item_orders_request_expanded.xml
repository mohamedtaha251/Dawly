<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorOrdersHeader"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350dp"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/headerLayout"
                android:background="@color/colorOrdersHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp">

            <com.dawly.app.views.DawlyButtonBold
                    android:text="@string/close"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/itemImgLayout"
                android:layout_below="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150dp">

            <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:id="@+id/itemImg"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera"
                    android:layout_height="@dimen/_150dp"/>
            <View
                    android:background="@color/colorTransparentBlack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <com.dawly.app.views.DawlyButtonBold
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"

                    android:background="@drawable/laguage_bg"
                    android:text="@string/add_to_your_luggage"
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>


        <RelativeLayout
                android:background="@color/colorCard"
                android:layout_below="@+id/itemImgLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300dp">

            <com.dawly.app.views.DawlyTextView
                    android:id="@+id/fromTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textColor="@color/colorSeparator"
                    android:textSize="@dimen/_12sp"
                    android:text="@string/from"
                    />

            <ImageView
                    android:id="@+id/flagImg"
                    android:layout_below="@+id/fromTitle"
                    android:src="@drawable/egypt"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"/>

            <com.dawly.app.views.DawlyTextViewBold
                    android:layout_below="@+id/fromTitle"
                    android:layout_toEndOf="@+id/flagImg"
                    android:text="Egypt"
                    android:id="@+id/country"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/colorExpandedText"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.dawly.app.views.DawlyTextView
                    android:id="@+id/itemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSeparator"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textSize="@dimen/_12sp"
                    android:text="@string/from"
                    android:layout_alignStart="@+id/itemName"
                    />

            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorExpandedText"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:textSize="@dimen/_14sp"
                    android:maxLines="2"

                    android:layout_centerHorizontal="true"
                    android:text="Macbook pro 2018"
                    android:layout_below="@+id/itemTitle"/>

            <com.dawly.app.views.DawlyTextView
                    android:id="@+id/carriedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSeparator"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/_12sp"

                    android:layout_centerHorizontal="true"
                    android:text="By Muhammad Kamal"
                    android:layout_below="@+id/itemName"/>


            <com.dawly.app.views.DawlyTextView
                    android:id="@+id/weightTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSeparator"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textSize="@dimen/_12sp"
                    android:text="@string/weight"
                    android:layout_alignParentEnd="true"/>

            <com.dawly.app.views.DawlyTextViewBold
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weightTitle"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:textColor="@color/colorExpandedText"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:textSize="@dimen/_14sp"
                    android:layout_alignParentEnd="true"
                    android:text="30 lbs"
                    />



            <com.dawly.app.views.DawlyTextView
                    android:id="@+id/itemDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSeparator"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/_12sp"
                    android:layout_centerHorizontal="true"
                    android:text="Item In Progress Item In Progress Item In Progress Item In Progress Item In Progress Item In Progress Item In Progress Item In Progress "
                    android:layout_below="@+id/carriedBy"/>
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
