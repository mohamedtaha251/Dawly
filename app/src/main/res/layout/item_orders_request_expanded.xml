<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#f6fdff"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400dp"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_200dp"/>
        <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:scaleType="fitXY"
                app:riv_corner_radius="@dimen/_10dp"
                android:src="@drawable/camera"
                android:layout_height="match_parent"/>



    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

        <android.support.v7.widget.CardView
                android:id="@+id/itemCard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_300dp"
                android:background="@color/colorCard"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_20dp"
                android:layout_marginStart="@dimen/_10dp"
                app:cardBackgroundColor="@color/colorCard"
                >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/fromTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_20dp"
                        android:textColor="@color/colorSeparator"
                        android:textSize="@dimen/_12sp"
                        android:text="@string/from"
                        />
                <ImageView
                        android:id="@+id/flagImg"
                        android:layout_below="@+id/fromTitle"
                        android:src="@drawable/egypt"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"/>
                    <com.dawly.app.views.DawlyTextViewBold
                            android:layout_below="@+id/fromTitle"
                            android:layout_toEndOf="@+id/flagImg"
                            android:text="Egypt"
                            android:id="@+id/country"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/colorExpandedText"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/itemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSeparator"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_12sp"
                        android:text="@string/from"
                        android:layout_below="@+id/flagImg"/>

                <com.dawly.app.views.DawlyTextViewBold
                        android:id="@+id/itemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorExpandedText"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_14sp"
                        android:maxLines="2"
                        android:text="Macbook pro 2018"
                        android:layout_below="@+id/itemTitle"/>
                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/carriedBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSeparator"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_12sp"
                        android:text="By Muhammad Kamal"
                        android:layout_below="@+id/itemName"/>


                <com.dawly.app.views.DawlyTextView
                        android:id="@+id/weightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSeparator"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_12sp"
                        android:text="@string/weight"
                        android:layout_below="@+id/carriedBy"/>
                <com.dawly.app.views.DawlyTextViewBold
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorExpandedText"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:textSize="@dimen/_14sp"
                        android:text="30 lbs"
                        android:layout_below="@+id/weightTitle"/>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_200dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
