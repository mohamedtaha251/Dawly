<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:minHeight="@dimen/_100dp"
        android:layout_height="wrap_content"
        >


    <android.support.v7.widget.CardView
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_20dp"
            app:cardCornerRadius="@dimen/_20dp"
            app:cardBackgroundColor="@color/colorMessagesMe"
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/time"
            android:layout_toStartOf="@+id/meImg"
            android:id="@+id/contentCard"
            android:minHeight="@dimen/_100dp"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.dawly.app.views.DawlyTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sp"
                    android:layout_centerInParent="true"
                    android:text="Welcome to the jungle Welcome to the jungle! "
                    android:padding="@dimen/_20dp"
                    />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <com.dawly.app.views.DawlyTextView
            android:id="@+id/time"
            android:text="08;30"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10dp"
            android:textColor="@color/colorEmail"
            android:textSize="@dimen/_14sp"
            android:layout_alignBottom="@+id/contentCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/meImg"
            android:src="@drawable/kamal"
            app:riv_oval="true"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/contentCard"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"/>
</RelativeLayout>