<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_balance_info_frame"
            android:layout_width="match_parent"
            android:background="@drawable/bubble_background_color"
            android:layout_height="300dp">

        <TextView
                android:id="@+id/tv_value_of_total_balance_balance_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:layout_marginTop="@dimen/_65dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="1.5sp"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="$ 1, 893.45"
        />

        <TextView
                android:id="@+id/tv_total_balance_balance_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="@color/colorWhite"
                android:lineSpacingExtra="1.5sp"
                android:gravity="center_horizontal"
                android:text="@string/total_balance"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_value_of_total_balance_balance_info"

        />

        <com.dawly.app.views.DawlyButtonBold
                android:id="@+id/btn_withdraw_balalnce_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingTop="@dimen/_20dp"
                android:paddingBottom="@dimen/_20dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:text="@string/withdraw"
                android:textColor="@color/colorWhite"
                android:background="@drawable/withdraw_btn_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_25dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_total_balance_balance_info"
        />

        <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_balance_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/flag_transparent"
                android:elevation="6dp"
                app:tabTextAppearance="@style/MyCustomTextAppearance"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintBottom_toBottomOf="parent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_balance_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_balance_info_frame"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

</android.support.constraint.ConstraintLayout>