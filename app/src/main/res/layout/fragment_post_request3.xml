<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:attrs="http://schemas.android.com/tools"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                android:id="@+id/step2Card"
                app:cardCornerRadius="@dimen/_15dp"
                android:layout_marginStart="@dimen/_40dp"
                android:layout_marginEnd="@dimen/_40dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_170dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPost"
                app:cardBackgroundColor="@color/colorLogin">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/visaLayout"
                        android:layout_margin="@dimen/_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/colorEmail"
                            android:src="@drawable/ic_visa_1"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_mastercard"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_maestro"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_american_express_logo"/>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/_15dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginTop="@dimen/_70dp"
                android:layout_marginBottom="@dimen/_30dp"
                android:layout_above="@+id/pageIndicatorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPost"
                app:cardElevation="@dimen/_20dp"
                app:cardBackgroundColor="@color/colorPost">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <ImageView
                        android:id="@+id/paypalLogo"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_100dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_40dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_paypal"/>


                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_20dp"
                        android:id="@+id/paypalEmail"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:paddingBottom="@dimen/_20dp"
                        android:layout_below="@+id/paypalLogo"
                        android:textColor="@color/colorHeader"
                        android:textColorHint="@color/colorInactive"
                        android:hint="@string/email"
                        android:layout_height="wrap_content"/>

                <com.dawly.app.views.DawlyEditText
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <com.rd.PageIndicatorView
                android:id="@+id/pageIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10dp"
                app:piv_animationType="worm"
                app:piv_dynamicCount="true"
                app:piv_select="1"
                android:visibility="visible"
                android:layout_above="@+id/continueBtn"
                app:piv_interactiveAnimation="true"
                app:piv_selectedColor="#35a6b7"
                app:piv_unselectedColor="#bfcefa"
                attrs:piv_padding="10dp"
                attrs:piv_radius="5dp"/>

        <com.dawly.app.views.DawlyButtonBold
                android:id="@+id/continueBtn"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:text="@string/continue_"
                android:textAllCaps="false"
                android:visibility="visible"
                android:textColor="@color/colorWhite"
                android:background="@drawable/continue_gradient_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>