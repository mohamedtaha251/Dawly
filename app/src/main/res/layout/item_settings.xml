<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorCard"
        app:cardCornerRadius="@dimen/_15dp"
        app:cardElevation="@dimen/_20dp"
        app:cardBackgroundColor="@color/colorCard"
        android:layout_width="@dimen/_150dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_height="@dimen/_150dp">


    <RelativeLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_70dp"
                android:layout_marginEnd="-80dp"
                android:background="@drawable/ic_small_wave"
                android:layout_height="match_parent"/>


        <ImageView
                android:id="@+id/accountImg"
                android:src="@drawable/ic_account"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.dawly.app.views.DawlyTextViewBold
                android:text="@string/my_account"
                android:layout_below="@+id/accountImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10dp"
                android:textColor="@color/colorEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>

