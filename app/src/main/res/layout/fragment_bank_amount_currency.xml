<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6fdff"
>

    <TextView
            android:id="@+id/tv_bank_amiunt_currency_withdraw"
            android:layout_width="match_parent"
            android:text="@string/amount_and_currency"
            android:gravity="center"
            android:paddingTop="@dimen/_15dp"
            android:paddingBottom="@dimen/_20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginEnd="@dimen/_60dp"
            android:background="@drawable/withdraw_header_text_view"
            android:textColor="@color/colorHeader"
            android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/card_bank_amount_and_currency_wirhdraw"
            android:layout_width="match_parent"
            app:cardElevation="@dimen/_10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#bff6ff"
            app:cardCornerRadius="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@id/tv_bank_amiunt_currency_withdraw"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/flag_transparent"
                android:paddingTop="8dp"
                android:paddingBottom="@dimen/_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bank_amount_currency_bank_account_info_Input"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.dawly.app.views.DawlyEditText
                        android:id="@+id/bank_amount_currency_bank_account_country"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:textSize="13sp"
                        android:inputType="textCapCharacters"
                        android:hint="@string/bank_account_country"
                        android:textColor="@color/dark_slate_blue"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp" android:textColorHint="@color/dark_slate_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bank_amount_currency_name_of_bank_Input"
                    app:layout_constraintTop_toBottomOf="@id/bank_amount_currency_bank_account_info_Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.dawly.app.views.DawlyEditText
                        android:id="@+id/bank_amount_currency_name_of_bank_country"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:textSize="13sp"
                        android:inputType="textCapCharacters"
                        android:hint="@string/name_of_bank"
                        android:textColor="@color/dark_slate_blue"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp" android:textColorHint="@color/dark_slate_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bank_amount_currency_beneficiary_name_Input"
                    app:layout_constraintTop_toBottomOf="@id/bank_amount_currency_name_of_bank_Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.dawly.app.views.DawlyEditText
                        android:id="@+id/bank_amount_currency_beneficiary_name"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:textSize="13sp"
                        android:inputType="textCapCharacters"
                        android:hint="@string/beneficiary_name"
                        android:textColor="@color/dark_slate_blue"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:textColorHint="@color/dark_slate_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bank_amount_currency_iban_number_Input"
                    app:layout_constraintTop_toBottomOf="@id/bank_amount_currency_beneficiary_name_Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.dawly.app.views.DawlyEditText
                        android:id="@+id/bank_amount_currency_iban_number"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:textSize="13sp"
                        android:inputType="textCapCharacters"
                        android:hint="@string/iban_number"
                        android:textColor="@color/dark_slate_blue"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:textColorHint="@color/dark_slate_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bank_amount_currency_routing_number_Input"
                    app:layout_constraintTop_toBottomOf="@id/bank_amount_currency_iban_number_Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.dawly.app.views.DawlyEditText
                        android:id="@+id/bank_amount_currency_bank_routing_number"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:textSize="13sp"
                        android:inputType="textCapCharacters"
                        android:hint="@string/routing_number"
                        android:textColor="@color/dark_slate_blue"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:textColorHint="@color/dark_slate_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bank_amount_currency_swift_code_bin_Input"
                    app:layout_constraintTop_toBottomOf="@id/bank_amount_currency_routing_number_Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.dawly.app.views.DawlyEditText
                        android:id="@+id/bank_amount_currency_swift_code_bin"
                        android:maxLines="1"
                        android:maxLength="50"
                        android:textSize="13sp"
                        android:inputType="textCapCharacters"
                        android:hint="@string/swift_code_bin"
                        android:textColor="@color/dark_slate_blue"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:textColorHint="@color/dark_slate_blue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>