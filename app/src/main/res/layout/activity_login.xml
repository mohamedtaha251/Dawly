<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View"/>

        <variable
                name="clickListener"
                type="com.dawly.app.base.BaseContract.ClickListener"/>
    </data>


    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:background="@color/colorLogin_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="-150dp"
                    android:src="@drawable/ic_wave_light"
            />

            <ImageView
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:layout_marginStart="-150dp"
                    android:src="@drawable/ic_wave_semi_light"
            />

            <ImageView
                    android:id="@+id/headerLogo"
                    android:src="@drawable/ic_logo"
                    android:layout_margin="@dimen/_20dp"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_60dp"/>

            <FrameLayout
                    android:id="@+id/login_frame"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/headerLogo"
                    android:layout_height="wrap_content">

                <!-- sign in -->
                <RelativeLayout
                        android:visibility="invisible"
                        android:id="@+id/sign_in_frame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView

                            android:visibility="visible"
                            app:cardCornerRadius="@dimen/_15dp"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:layout_marginTop="@dimen/_20dp"
                            android:shadowRadius="30"
                            android:layout_marginBottom="-15dp"

                            android:id="@+id/signCard"
                            app:cardBackgroundColor="@color/cardBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <com.dawly.app.views.DawlyTextViewBold
                                    android:id="@+id/login_header"
                                    android:padding="@dimen/_20dp"
                                    android:text="@string/sign_in"
                                    android:textSize="30sp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/login_emailInput"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/login_header"
                                    android:layout_height="wrap_content">

                                <com.dawly.app.views.DawlyEditText
                                        android:id="@+id/login_email"
                                        android:textAllCaps="true"
                                        android:hint="@string/email"
                                        android:textColor="@color/colorHeader"
                                        android:layout_margin="@dimen/_20dp"
                                        android:textColorHint="@color/colorHeader"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/login_passwordInput"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/login_emailInput"
                                    android:layout_height="wrap_content">

                                <com.dawly.app.views.DawlyEditText
                                        android:id="@+id/login_password"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorHeader"
                                        android:layout_marginEnd="@dimen/_20dp"
                                        android:layout_marginStart="@dimen/_20dp"
                                        android:textColorHint="@color/colorHeader"
                                        android:hint="@string/password"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </android.support.design.widget.TextInputLayout>

                            <com.dawly.app.views.DawlyButton
                                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                                    android:text="@string/forget_pass"
                                    android:layout_marginEnd="@dimen/_20dp"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:layout_marginBottom="@dimen/_50dp"
                                    android:layout_below="@+id/login_passwordInput"
                                    android:layout_alignParentEnd="true"
                                    android:textAllCaps="false"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </RelativeLayout>


                    </android.support.v7.widget.CardView>
                    <com.dawly.app.views.DawlyButtonBold
                            android:id="@+id/btn_switch_to_sign_up"
                            android:text="@string/sign_up"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:visibility="visible"
                            android:layout_below="@+id/signCard"
                            android:layout_width="match_parent"
                            android:background="@drawable/sign_up_ng"
                            android:textColor="@color/colorHeader"
                            android:layout_marginEnd="@dimen/_40dp"
                            android:layout_marginStart="@dimen/_40dp"
                            android:layout_height="@dimen/_80dp"/>
                </RelativeLayout>

                <!-- sign up -->
                <RelativeLayout
                        android:id="@+id/sign_up_frame"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <com.dawly.app.views.DawlyButtonBold
                            android:id="@+id/btn_switch_to_sign_in"
                            android:text="@string/sign_in"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:visibility="visible"
                            android:layout_marginTop="@dimen/_20dp"
                            android:layout_width="match_parent"
                            android:background="@drawable/sign_up_ng"
                            android:textColor="@color/colorHeader"
                            android:layout_marginEnd="@dimen/_40dp"
                            android:layout_marginStart="@dimen/_40dp"
                            android:layout_height="@dimen/_80dp"/>

                    <android.support.v7.widget.CardView
                            android:visibility="visible"
                            app:cardCornerRadius="@dimen/_15dp"
                            android:layout_below="@id/btn_switch_to_sign_in"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:layout_marginTop="-15dp"
                            android:shadowRadius="30"
                            android:id="@+id/signupcard"
                            app:cardBackgroundColor="@color/cardBackground"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <com.dawly.app.views.DawlyTextViewBold
                                    android:id="@+id/signup_header"
                                    android:padding="@dimen/_20dp"
                                    android:text="@string/sign_up"
                                    android:textSize="30sp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/colorHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/signup_first_name_Input"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/signup_header"
                                    android:layout_height="wrap_content">

                                <com.dawly.app.views.DawlyEditText
                                        android:id="@+id/signup_first_name"
                                        android:textAllCaps="true"
                                        android:hint="@string/firstname"
                                        android:textColor="@color/colorHeader"
                                        android:layout_margin="@dimen/_20dp"
                                        android:textColorHint="@color/colorHeader"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/last_name_passwordInput"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/signup_first_name_Input"
                                    android:layout_height="wrap_content">

                                <com.dawly.app.views.DawlyEditText
                                        android:id="@+id/sign_up_last_name_password"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorHeader"
                                        android:layout_marginEnd="@dimen/_20dp"
                                        android:layout_marginStart="@dimen/_20dp"
                                        android:textColorHint="@color/colorHeader"
                                        android:hint="@string/lastname"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/signup_passwordInput"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/last_name_passwordInput"
                                    android:layout_height="wrap_content">

                                <com.dawly.app.views.DawlyEditText
                                        android:id="@+id/signup_password"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorHeader"
                                        android:layout_marginEnd="@dimen/_20dp"
                                        android:layout_marginStart="@dimen/_20dp"
                                        android:textColorHint="@color/colorHeader"
                                        android:hint="@string/password"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/signup_confirm_passwordInput"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/signup_passwordInput"
                                    android:layout_height="wrap_content">

                                <com.dawly.app.views.DawlyEditText
                                        android:id="@+id/signup_confirm_password"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorHeader"
                                        android:layout_marginEnd="@dimen/_20dp"
                                        android:layout_marginStart="@dimen/_20dp"
                                        android:textColorHint="@color/colorHeader"
                                        android:hint="@string/confirm_password"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/signup_email_Input"
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/signup_confirm_passwordInput"
                                    android:layout_height="wrap_content">

                                <com.dawly.app.views.DawlyEditText
                                        android:id="@+id/signup_email"
                                        android:textAllCaps="true"
                                        android:textColor="@color/colorHeader"
                                        android:layout_marginEnd="@dimen/_20dp"
                                        android:layout_marginStart="@dimen/_20dp"
                                        android:textColorHint="@color/colorHeader"
                                        android:hint="@string/email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                            </android.support.design.widget.TextInputLayout>



                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </FrameLayout>


            <com.dawly.app.views.DawlyButtonBold
                    android:id="@+id/loginBtn"
                    android:text="@string/sign_in"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_30dp"
                    android:layout_below="@+id/login_frame"
                    android:layout_width="match_parent"
                    android:background="@drawable/email_bg"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="@dimen/_20dp"
                    android:layout_height="wrap_content"/>


            <com.dawly.app.views.DawlyTextView
                    android:id="@+id/terms"
                    android:text="@string/i_agree"
                    android:layout_centerHorizontal="true"
                    android:maxLines="2"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:textColor="@color/colorHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loginBtn"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20dp"/>
        </RelativeLayout>
    </ScrollView>
</layout>